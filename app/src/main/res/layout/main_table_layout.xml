<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="40dp"
            android:id="@+id/one"
            android:src="@mipmap/one"
            android:layout_marginTop="1dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/table_one"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/main_table" />
        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="#FFF"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/table_one" />

        <ImageView
            android:id="@+id/two"
            android:src="@mipmap/two"
            android:layout_marginTop="1dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/table_two"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/main_table" />
        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_below="@+id/table_two"
            android:background="@color/hintColor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="40dp"
            android:id="@+id/three"
            android:src="@mipmap/three"
            android:layout_marginTop="1dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/table_three"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/main_table" />
        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="#FFF"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/table_three" />

        <ImageView
            android:id="@+id/four"
            android:src="@mipmap/four"
            android:layout_marginTop="1dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/table_four"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/main_table" />
        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_below="@+id/table_four"
            android:background="@color/hintColor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/five"
            android:src="@mipmap/five"
            android:layout_marginTop="1dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/table_five"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/main_table" />
        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="#FFF"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/table_five" />
    </RelativeLayout>

</LinearLayout>
